{
  "manifest_version": 3,
  "name": "Doggy AI Buddy",
  "version": "1.0",
  "description": "AI assistant for n8n workflows",
  "action": {
    "default_popup": "src/popup.html"
  },
  "permissions": ["tabs", "activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://*.ngrok-free.app/workflow/*"],
      "js": ["src/content.js"]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  }
}

